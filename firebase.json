{
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
      "source": "/sample", "function": "sample"
      },
      {
      "source": "/postTimeout", "function": "test"
      }
    ],
    "headers":[
        {
            "source" : "**",
            "headers" : [{
            "key" : "Cache-Control", "value" : "no-cache"
            }]
        },
        {
            "source" : "r/*",
            "headers" : [{
            "key" : "Cache-Control", "value" : "max-age=31536000"
            }]
        }
    ]
  }
}
